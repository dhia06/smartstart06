{% extends 'base1.html.twig' %}
{% block body %}
    <div class="modal-content">

        {{ form_start(form) }}
        <div class="modal-header">
            <h1 style="color: #003147"><b><i><center>Ajouter une Actualite</center></i></b></h1>
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="form-group col-xs-5">
                    {{ form_label(form.titre, 'Titre : ',{'attr': {'class': 'control-label'}})  }}
                    {{ form_widget(form.titre,  {'attr': {'class': 'form-control'}}) }}

                </div>
            </div>

            <div class="form-group col-xs-3">
                {{ form_label(form.date, 'Date : ',{'attr': {'class': 'control-label'}}) }}

                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-xs-5">
                    {{ form_label(form.description, 'Description : ',{'attr': {'class': 'control-label'}})  }}
                    {{ form_widget(form.description,  {'attr': {'class': 'form-control'}}) }}
                </div>

            </div>
            <div class="row">
                <div class="form-group col-xs-5">
                    {{ form_label(form.file, 'Image : ',{'attr': {'class': 'control-label'}})  }}
                    {{ form_widget(form.file,  {'attr': {'class': 'form-control'}}) }}
                </div>

            </div>
            <div class="modal-footer">
                <a href="{{ path('actualite_homepage') }}" class="btn btn-default pull-left" data-dismiss="modal">Annuler</a>
                {#                <a href="{{ path('actualite_affiche') }}">VOIR LA LISTE <img src="{{ asset('images/liste.png') }}"></a>#}
                {{ form_widget(form.Ajouter,{'label': 'Ajouter', 'attr': {'class': 'btn btn-success btn-rounded'} }) }}
                {{ form_end(form) }}

            </div>

        {{ form_end(form) }}


    </div>
    </div>

{% endblock %}
