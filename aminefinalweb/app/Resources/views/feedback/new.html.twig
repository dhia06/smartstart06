{% extends 'base.html.twig' %}

{% block body %}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <button type="button" class="btn btn-danger"><a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a></button>
        {% else %}
            <button class="btn btn-info"><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></button>
        {% endif %}
    </div>
    <h1>Feedback creation</h1>

    {{ form_start(form) }}
    <table>
        <tr>
            <td>Objet:</td><td>{{ form_widget(form.objet7) }}</td><td> {{ form_errors(form.objet7) }} </td>
        </tr>
        <tr>
            <td>Contenu:</td><td>{{ form_widget(form.contenu7) }}</td>
        </tr>
        <tr>
            <td>Mail:</td><td>{{ form_widget(form.mail7) }}</td><td> {{ form_errors(form.mail7) }} </td>
        </tr>
        <tr>
            <td>Iduser:</td><td>{{ form_widget(form.iduser7) }}</td>
        </tr>

    </table>
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('feedback_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
